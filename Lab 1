Longest_line.py

navn=str(input("hva er ditt navn"))
adresse=str(input("Hva er din adresse?"))
post=str(input("Hva er ditt postnummer og poststed?"))

ln=len(navn)
la=len(adresse)
lp=len(post)

print(navn,"-", adresse,"-", post)


if ln > la and ln > lp:
    print(ln,"navn")

if la > ln and la > lp:
    print(la,"adresse")


if lp > la and lp > ln:
    print(lp,"post")

distance.py
x1=int(input("x1"))
y1=int(input("y1"))
x2=int(input("x2"))
y2=int(input("y2"))

xt=x2-x1
yt=y2-y1

avstand= ((xt**2) + (yt**2))**(1/2)

print("Avstanden mellom", (x1, x2) ,"og" ,(x2, y2), "er", avstand)
